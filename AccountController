
//Для работы с учетными записями пользователей добавил в папку Controllers новый контроллер AccountController и определил в нем метод для регистрации пользователей


using Microsoft.AspNetCore.Identity;
using SocialSciencesEF2024.ViewModels;
using SocialSciencesEF2024.Identity;
using Microsoft.AspNetCore.Mvc;

namespace SocialSciencesEF2024.Controllers
{
    public class AccountController : Controller
    {
        private readonly UserManager<User> _userManager;
        private readonly SignInManager<User> _signInManager; // почему-то не находит, хотя using Microsoft.AspNetCore.Identity подключено



        public AccountController(UserManager<User> userManager, SignInManager<User> signInManager)
        {
            _userManager = userManager;
            _signInManager = signInManager;
        }
        [HttpGet]
        public IActionResult Register()
        {
            return View();
        }
        [HttpPost]
        public async Task<IActionResult> Register(RegisterViewModel model)
        {
            if (ModelState.IsValid)
            {
                User user = new User { Email = model.Email, NameOfUser = model.NameOfUser, Password = model.Password };
                // добавляем пользователя
                var result = await _userManager.CreateAsync(user, model.Password);
                if (result.Succeeded)
                {
                    // установка 
                    await _signInManager.SignInAsync(user, false);
                    return RedirectToAction("Index", "Home");
                }
                else
                {
                    foreach (var error in result.Errors)
                    {
                        ModelState.AddModelError(string.Empty, error.Description);
                    }
                }
            }
            return View(model);
        }
    }
}
